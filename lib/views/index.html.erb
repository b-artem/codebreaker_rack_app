<!DOCTYPE html>
<html>
  <head>
    <title>Codebreaker Rack App</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="stylesheets/application.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="js/validate_guess_form.js"></script>
    <script src="js/validate_save_result_form.js"></script>
  </head>

  <body>
    <div class='container'>
      <section id="buttons">
        <%= render '_buttons.html.erb' %>
      </section>

      <section id="guess-section">
        <%= render '_guess_section.html.erb' %>
      </section>

      <section id="game-result">
        <%= render '_game_result.html.erb' %>
      </section>

      <section id="save-result">
        <%= render '_save_result.html.erb' %>
      </section>

      <section id="info">
        <div id="attempts-hints-info">
          <%= render '_attempts_hints_info.html.erb' %>
        </div>

        <div id="guess-log">
          <%= render '_guess_log.html.erb' %>
        </div>
      </section>
    </div>

    <script>
      $(document).ready(function(){
        <% if won? || lost? %>
          $('#guess, #submit-btn, #hint-btn').prop("disabled", true);
          $('#guess-label').addClass('disabled');
          $('#name-input').focus();
        <% end %>

        <% if hints_left == 'no' %>
          $('#hint-btn').prop("disabled", true);
        <% end %>

        $('#guess').focus();
      });
    </script>
  </body>
</html>
